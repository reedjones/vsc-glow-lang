{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Glow",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.glow",
				"match": "\\b(switch|case|let|return|data|choice|loop)\\b"
			}]
		},
		"reserved-words": {
			"patterns": [{ 
				"name": "entity.name.function.glow",
				"match": "\\b(verify!|assert!|publish!|require!|withdraw!|deposit!)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.glow",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.glow",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
				"name": "comment.line.glow",
				"begin": "//",
				"end": "\n"

				},
				{
				"name":"comment.block.glow",
				"begin": "/*",
				"end": "*/"
				}
			]
		},
	},
	"scopeName": "source.glow"
}